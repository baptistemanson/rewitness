{
  "name": "rewitness",
  "version": "0.1.0",
  "description": "Mini game copying the puzzles from The Witness",
  "scripts": {
    "start": "_build/native/src/app.native",
    "build": "esy build",
    "editor": "esy $EDITOR .",
    "mlre": "pbpaste | esy refmt --parse ml --print re -use-stdin true -is-interface-pp false",
    "reml": "pbpaste | esy refmt --parse re --print ml -use-stdin true -is-interface-pp false"
  },
  "dependencies": {
    "rebel": "bsansouci/rebel#esy",
    "reglinterface": "*",
    "reglnative": "*",
    "reglweb": "*",
    "@opam-alpha/topkg": "*",
    "reason": "facebook/reason#esy"
  },
  "devDependencies": {
    "@opam-alpha/merlin": "^ 2.5.0"
  },
  "esy": {
    "build": [
      "rebel",
      "webpack $cur__target_dir/web/src/indexwebgl.js $cur__target_dir/web/src/app.js"
    ]
  },
  "rebel": {
    "targets": [{
      "target": "native",
      "engine": "native",
      "entry": "src/indexopengl.re",
      "unstable_flags": {
        "compile": "-package tgls.tgl3,tsdl",
        "link": "-linkpkg -package tgls.tgl3,tsdl -cclib \"$(pkg-config --libs reglnative)\""
      }
    },{
      "target": "web",
      "engine": "bucklescript",
      "entry": "src/indexwebgl.re"
    }]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bsansouci/rewitness.git"
  },
  "author": "bsansouci & schmavery"
}
